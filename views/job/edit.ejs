<!DOCTYPE html>
<html>
<head>
	<title>Edit Job</title>
</head>
<body>
	<form method="post">
		<fieldset>
			<legend>Edit Job</legend>
			<table>
				<tr>
					<td>Id</td>
					<td><input type="text" name="jid" value="<%=value[0].id%>" disabled></td>
				</tr>
				<tr>
					<td>Buyer Name</td>
					<td><input type="text" name="buyer_name" value="<%=value[0].buyer_uname %>" disabled></td>
				</tr>
				<tr>
					<td>Buyer Email</td>
					<td><input type="text" name="buyer_email" value="<%=value[0].buyer_email %>" disabled></td>
				</tr>
				<tr>
					<td>Job Description</td>
					<td><input type="text" name="job_desc" value="<%=value[0].job_desc %>"></td>
				</tr>
				<tr>
					<td>Job Date</td>
					<td><input type="datetime-local" name="job_date" value="<%=value[0].job_date %>"></td>
				</tr>
				<tr>
					<td>Salary</td>
					<td><input type="text" name="salary" value="<%=value[0].salary %>"></td>
				</tr>
				<tr>
					<td><input type="hidden" name="id" value="<%=value[0].id%>"></td>
					<td><input type="submit" name="submit" value="Update"></td>
				</tr>
			</table>
		</fieldset>
	</form>
</body>
</html>